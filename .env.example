# Logging configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Mock Hardware Mode
# Enable this to run without physical hardware (for testing on non-Pi systems)
# When enabled, LED strips and temperature sensors are simulated
MOCK_MODE=false

# LED Hardware configuration
LED_COUNT=30
LED_PIN=18

# MQTT Configuration for Home Assistant integration
MQTT_ENABLED=true
MQTT_BROKER=192.168.1.100
MQTT_PORT=1883
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=your_mqtt_password_here
MQTT_CLIENT_ID=led_strip

# Gradient Configuration
GRADIENT_PRESETS_FILE=/home/twostal/hydrosense/data/gradient_presets.json

# Temperature Sensor Configuration (DS18B20)
TEMP_ENABLED=true
TEMP_SENSOR_IDS=  # Empty = auto-detect all, or comma-separated: 28-00000xxxxx,28-00000yyyyy
TEMP_UPDATE_INTERVAL=60  # Seconds between temperature reads
TEMP_UNIT=celsius  # celsius or fahrenheit

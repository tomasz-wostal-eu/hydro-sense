# Logging configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL={{ log_level | default('INFO') }}

# LED Hardware configuration
LED_COUNT={{ led_count | default(30) }}
LED_PIN={{ led_pin | default(18) }}

# MQTT Configuration for Home Assistant integration
MQTT_ENABLED={{ mqtt_enabled | default('true') | lower }}
MQTT_BROKER={{ mqtt_broker | default('localhost') }}
MQTT_PORT={{ mqtt_port | default(1883) }}
MQTT_USERNAME={{ mqtt_username | default('homeassistant') }}
MQTT_PASSWORD={{ mqtt_password | default('') }}
MQTT_CLIENT_ID={{ mqtt_client_id | default(inventory_hostname) }}

# Gradient Configuration
GRADIENT_PRESETS_FILE={{ project_path }}/data/gradient_presets.json

# Temperature Sensor Configuration (DS18B20)
TEMP_ENABLED={{ temp_enabled | default('true') | lower }}
TEMP_SENSOR_IDS={{ temp_sensor_ids | default('') }}
TEMP_UPDATE_INTERVAL={{ temp_update_interval | default(60) }}
TEMP_UNIT={{ temp_unit | default('celsius') }}

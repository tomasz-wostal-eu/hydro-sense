# Logging configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL={{ log_level | default('INFO') }}

# Mock Hardware Mode
# Enable this to run without physical hardware (for testing on non-Pi systems)
# When enabled, LED strips and temperature sensors are simulated
MOCK_MODE={{ mock_mode | default('false') | lower }}

# LED Hardware configuration
LED_COUNT={{ led_count | default(30) }}
LED_PIN={{ led_pin | default(18) }}

# MQTT Configuration for Home Assistant integration
MQTT_ENABLED={{ mqtt_enabled | default('true') | lower }}
MQTT_BROKER={{ mqtt_broker | default('localhost') }}
MQTT_PORT={{ mqtt_port | default(1883) }}
MQTT_USERNAME={{ mqtt_username | default('homeassistant') }}
MQTT_PASSWORD={{ mqtt_password | default('') }}
MQTT_CLIENT_ID={{ mqtt_client_id | default(inventory_hostname) }}

# Gradient Configuration
GRADIENT_PRESETS_FILE={{ project_path }}/data/gradient_presets.json

# Temperature Sensor Configuration (DS18B20)
TEMP_ENABLED={{ temp_enabled | default('true') | lower }}
TEMP_SENSOR_IDS={{ temp_sensor_ids | default('') }}
TEMP_UPDATE_INTERVAL={{ temp_update_interval | default(60) }}
TEMP_UNIT={{ temp_unit | default('celsius') }}

# Relay Configuration
RELAY_ENABLED={{ relay_enabled | default('false') | lower }}
# Format: "id:name:pin:active_low:default_state:max_on_time,..."
# Example: "pump:Aquarium Pump:17:true:OFF:60,heater:Heater:27:true:OFF:0"
RELAY_CONFIG={{ relay_config | default('') }}
RELAY_PUBLISH_STATE={{ relay_publish_state | default('true') | lower }}
RELAY_WATCHDOG_ENABLED={{ relay_watchdog_enabled | default('true') | lower }}
RELAY_WATCHDOG_INTERVAL={{ relay_watchdog_interval | default(30) }}

# Water Level Sensor Configuration
WATER_LEVEL_ENABLED={{ water_level_enabled | default('false') | lower }}
WATER_LEVEL_PIN={{ water_level_pin | default(23) }}
WATER_LEVEL_ACTIVE_HIGH={{ water_level_active_high | default('true') | lower }}
WATER_LEVEL_DEBOUNCE_TIME={{ water_level_debounce_time | default(0.5) }}

# Pump Automation Configuration
PUMP_AUTOMATION_ENABLED={{ pump_automation_enabled | default('false') | lower }}
PUMP_RELAY_ID={{ pump_relay_id | default('pump') }}
PUMP_ON_INTERVAL={{ pump_on_interval | default(30) }}
PUMP_OFF_INTERVAL={{ pump_off_interval | default(30) }}
PUMP_MAX_RUNTIME={{ pump_max_runtime | default(300) }}
